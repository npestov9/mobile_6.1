<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Add custom styles for text views and buttons -->
    <style name="AppTheme.TextView" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Button" parent="android:Widget.Material.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Input Text Style -->
    <style name="AppTheme.EditText" parent="android:Widget.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>
